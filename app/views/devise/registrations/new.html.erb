<div class="breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <h1>
          Register
        </h1>
      </div>
      <div class="col-lg-8 col-sm-8">
        <ol class="breadcrumb pull-right">
          <li>
            <a href="#">
              Home
            </a>
          </li>
          <li>
            <%= link_to "Home", root_path %>
            <a href="#">
              Pages
            </a>
          </li>
          <li class="active">
            About
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!--breadcrumbs end-->
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
    <%= f.input :first_name, required: true, 
        label: false, placeholder: "First Name" %>
    <%= f.input :last_name, required: true, 
        label: false, placeholder: "Last Name" %>
    <%= f.input :username, required: true, 
        label: false, placeholder: "Username" %>
    <%= f.input :email, required: true, 
        label: false, placeholder: "Email" %>
    <%= f.input :city, required: true, 
        label: false, placeholder: "City" %>
    <%= f.input :state_provence, required: true, 
        label: false, placeholder: "State/Provence" %>
    <%= f.input :password, required: true, 
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), 
        label: false, placeholder: "Choose a Password" %>
    <%= f.input :password_confirmation, 
        required: true, label: false, placeholder: "Confirm Password" %>

    <%= f.button :submit, "Sign up", class: "btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>










