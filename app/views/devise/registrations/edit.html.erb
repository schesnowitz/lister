<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


    <%= f.input :first_name, required: true, 
        label: false, placeholder: "First Name" %>
    <%= f.input :last_name, required: true, 
        label: false, placeholder: "Last Name" %>
    <%= f.input :username, required: true, 
        label: false, placeholder: "Username" %>
    <%= f.input :email, required: true, 
        label: false, placeholder: "Email" %>
    <%= f.input :city, required: true, 
        label: false, placeholder: "City" %>
    <%= f.input :state_provence, required: true, 
        label: false, placeholder: "State/Provence" %>    

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :current_password, required: true, 
    label: "Enter Your Current Password To Save Any Changes" %>

    <%= f.input :password, autocomplete: "off", required: false, 
        label: "Wanna New Password?  Enter it here." %>
    <%= f.input :password_confirmation, required: false, 
        label: "Confirm Your New Password." %>
    

    <%= f.button :submit, "Update" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

