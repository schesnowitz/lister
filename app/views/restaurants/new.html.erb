<div class="breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <h1>
          Create A Restaurant Review
        </h1>
      </div>
      <div class="col-lg-8 col-sm-8">
        <ol class="breadcrumb pull-right">
          <li>
            <a href="#">
              Home
            </a>
          </li>
          <li>
            <%= link_to "Home", root_path %>
            <a href="#">
              Pages
            </a>
          </li>
          <li class="active">
            About
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!--breadcrumbs end-->
<%= simple_form_for @restaurant do |form| %>
<div class="container">
  <div class="row">
  <div class="col-xs-4">
    <%= form.input :name, label: false, placeholder: "Enter The Restaurant Name" %>
  </div>
    <div class="col-xs-4">
    <%= form.select :category_id, Category.all.map{ |form| [form.name, form.id]} %>
  </div>
</div>
<!--new row-->
<div class="row">
  <div class="col-xs-8">
    <%= form.input :description, label: false, placeholder: "Provide a Description" %>
  </div>
</div>
<!--new row-->
<div class="row">
  <div class="col-xs-4">
    <%= form.input :address1, label: false, placeholder: "Street Address" %>
  </div>
  <div class="col-xs-4">
    <%= form.input :address2, label: false, placeholder: "Any Other Address Info" %>
  </div>
</div>
<!--new row-->
  <div class="row">
  <div class="col-xs-3">
    <%= form.input :city, label: false, placeholder: "City" %>
  </div>
  <div class="col-xs-3">
    <%= form.input :state_provence, label: false, placeholder: "State or Provence" %>
  </div>
  <div class="col-xs-2">
    <%= form.input :postalcode, label: false, placeholder: "Zip or Postal Code" %>
  </div>
</div>
<!--new row-->
  <div class="row">
  <div class="col-xs-3">
    <%= form.input :phone, label: false, placeholder: "Restaurant Telephone" %>
  </div>
  <div class="col-xs-3">
    <%= form.input :email, label: false, placeholder: "Website or Email" %>
  </div>

</div>
<!--new row-->
  <div class="row">
  <div class="col-xs-4">
     <%= form.submit "Create Restaurant", class: "btn btn-warning" %>
  </div>
</div>


<% end %>
</div>

